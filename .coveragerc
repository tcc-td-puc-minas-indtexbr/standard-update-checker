# .coveragerc to control coverage.py
[paths]
source = ./

[run]
branch = True
omit =
        */test*
        *venv/*,
        *vendor/*
        *~/.local/lib/*
        /usr/local/lib*
        /home/andersoncontreira/.local/*


[report]
omit =
        */test*
        *venv/*,
        *vendor/*
        *~/.local/lib/*
        /usr/local/lib*
        /home/andersoncontreira/.local/*

[html]
directory =  ./target/unit/coverage_html/

[xml]
output = ./target/unit/report.xml
